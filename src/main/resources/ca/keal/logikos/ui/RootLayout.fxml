<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">
  
  <top>
    <MenuBar useSystemMenuBar="true">
      <Menu text="File">
        <MenuItem text="Save" accelerator="Shortcut+S" fx:id="saveItem" />
        <MenuItem text="Save as..." accelerator="Shortcut+Shift+S" fx:id="saveAsItem" />
        <MenuItem text="Open..." accelerator="Shortcut+O" fx:id="openItem" />
      </Menu>
      <Menu text="Gate">
        <MenuItem text="Import gate..." accelerator="Shortcut+G" fx:id="addUserGateItem" />
      </Menu>
    </MenuBar>
  </top>
  
  <center>
    <SplitPane prefHeight="600" prefWidth="1000"
               dividerPositions="0.3">
      
      <fx:include fx:id="toolPane" source="ToolPane.fxml" />
      
      <StackPane>
        <fx:include fx:id="fieldPane" source="FieldPane.fxml" />
        <fx:include fx:id="evaluationBox" source="EvaluationBox.fxml" StackPane.alignment="TOP_RIGHT" />
      </StackPane>
      
    </SplitPane>
  </center>
  
</BorderPane>